{
  "name": "jurisnexo-monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@jurisnexo/web",
    "dev:api": "cd apps/api/JurisNexo.Api && dotnet watch run",
    "dev:worker": "turbo run dev --filter=@jurisnexo/worker",
    "build": "pnpm generate:types && turbo run build",
    "build:web": "turbo run build --filter=@jurisnexo/web",
    "build:api": "cd apps/api && dotnet publish -c Release -o out",
    "generate:types": "cd packages/@jurisnexo/contracts && ./generate.sh",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "cd apps/api/JurisNexo.Api && dotnet ef database update",
    "db:migration:create": "cd apps/api/JurisNexo.Api && dotnet ef migrations add",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "deploy:staging": "./infrastructure/scripts/deploy.sh staging",
    "deploy:production": "./infrastructure/scripts/deploy.sh production"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.10.0"
}