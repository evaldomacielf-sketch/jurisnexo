{
    "name": "@jurisnexo/shared",
    "version": "0.0.1",
    "private": true,
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./dtos": {
            "types": "./dist/dtos/index.d.ts",
            "import": "./dist/dtos/index.js",
            "require": "./dist/dtos/index.js",
            "default": "./dist/dtos/index.js"
        },
        "./validators": {
            "types": "./dist/validators/index.d.ts",
            "import": "./dist/validators/index.js",
            "require": "./dist/validators/index.js",
            "default": "./dist/validators/index.js"
        }
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "test": "vitest run",
        "test:watch": "vitest",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "typescript": "^5.7.2",
        "vitest": "^2.1.8"
    }
}