# =============================================
# JurisNexo API - Environment Variables
# =============================================
# Copie este arquivo para .env e preencha os valores reais
# NÃO versione o .env (já está no .gitignore)

# =============================================
# DATABASE
# =============================================
DATABASE_URL=postgresql://user:pass@host:5432/jurisnexo

# =============================================
# AUTHENTICATION (JWT)
# =============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EXPIRATION=900
JWT_REFRESH_EXPIRATION=604800

# =============================================
# REDIS (opcional - deixe comentado para usar fallback em memória)
# =============================================
# REDIS_HOST=localhost
# REDIS_PORT=6379

# =============================================
# SUPABASE
# =============================================
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================
# EMAIL (SendGrid)
# =============================================
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM_EMAIL=noreply@jurisnexo.com

# =============================================
# FRONTEND
# =============================================
FRONTEND_URL=https://app.jurisnexo.com

# =============================================
# FINANCE MODULE
# =============================================

# Asaas Payment Gateway
ASAAS_API_KEY=YOUR_ASAAS_API_KEY
ASAAS_WEBHOOK_SECRET=YOUR_ASAAS_WEBHOOK_SECRET
ASAAS_SANDBOX=true

# AWS S3 (Notas Fiscais / Attachments)
AWS_S3_BUCKET_NAME=your-s3-bucket
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=sa-east-1

# Notification Service
NOTIFICATION_SERVICE_URL=http://localhost:3001/api/notifications

# =============================================
# INSTAGRAM (opcional)
# =============================================
# INSTAGRAM_ACCESS_TOKEN=seu-access-token
# INSTAGRAM_PAGE_ACCESS_TOKEN=seu-page-access-token
# INSTAGRAM_USER_ID=seu-instagram-user-id
# INSTAGRAM_WEBHOOK_VERIFY_TOKEN=seu-token-verificacao
# META_APP_ID=seu-app-id
# META_APP_SECRET=seu-app-secret
